{% extends 'layout.html.twig' %}
{% set active = 'status' %}

{# title #}
{% block title %}{% endblock %}

{# keywords #}
{% block keywords %}{% endblock %}

{# description #}
{% block description %}{% endblock %}

{# intro #}
{% block intro %}
<div class="row">
    <div class="span9">
        <h1>Network Status Updates</h1>
    </div>
    <div class="span3">
        <img alt="gears" class="banner-img" src="../../img/gears-plain.png" />
    </div>
</div>
{% endblock %}

{% block content %}
<div class="pattern">
    <div class="container wrap-emp">
        <div class="row">
            <div class="span4">
                <div class="island raised">
                    <h3>Eastern Network Status</h3>
                    <div class="label label-success">Normal</div>
                    <div class="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Note:</strong> <p>No current issues to report.</p>
                    </div>
                </div>
            </div>
            <div class="span4">
                <div class="island raised">
                    <h3>Western Network Status</h3>
                    <div class="label label-success">Normal</div>
                    <div class="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>Note:</strong> <p>No current issues to report.</p>
                    </div>
                </div>
            </div>
            <div class="span4">
                <div class="island raised">
                    <h3>Server Status</h3>
                    <div class="label label-important">Problem</div>
                    <div class="alert">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <strong>AT&amp;T Connectivity</strong> <p>Some customers on servers ecbiz102, ecbiz115, and ecbiz108 who use an AT&amp;T service provider may be experiencing connectivity problems. AT&amp;T has been notified and we are awaiting resolution.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row-fluid suggestion">
             <p class="island raised"><img src="./img/bolt.png" width="12" height="24" alt="bolt icon" class="iconleft" />If you are experiencing an issue that is not described above, please visit our <a href="#">Support Center</a>. Follow us on Twitter for immediate updates.</p>
        </div>
    </div>
</div>
{% endblock %}